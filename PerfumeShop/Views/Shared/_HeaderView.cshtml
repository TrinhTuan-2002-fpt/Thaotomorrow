@{
    var Name = ViewData["name"] as string;
    var user = ViewData["idCus"] as string;
}

<header class="main-header_area position-relative">
    <div class="header-middle py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <div class="header-middle-wrap">
                        <a asp-area="" asp-controller="" asp-action="Index" class="header-logo">
                            <img src="~/Images/Logo/logo.jpg"  alt="Header Logo">
                        </a>
                        <div class="header-search-area d-none d-lg-block">
                            <form action="#" class="header-searchbox">
                                <select class="nice-select select-search-category wide">
                                    <option value="all">Loại Nước Hoa</option>
                                    <option value="product-item"></option>
                                    <option value="product-item-2"></option>
                                    <option value="product-item-3"></option>
                                </select>
                                <input class="input-field" type="text" name="search" placeholder="Search Products">
                                <button class="btn btn-outline-whisper btn-primary-hover" type="submit"><i class="pe-7s-search"></i></button>
                            </form>
                        </div>
                        <div class="header-right">
                            <ul>
                                <li class="dropdown d-none d-md-block">
                                    <button class="btn btn-link dropdown-toggle ht-btn p-0" type="button" id="settingButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="pe-7s-users"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingButton">
                                        @if (Name == null)
                                        {
                                            <li><a class="dropdown-item" asp-controller="Customers" asp-action="Login">Login</a></li>
                                            <li><a class="dropdown-item" asp-controller="Customers" asp-action="Register">Register</a></li>
                                            <hr class="col-10 offset-1"/>
                                            <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                                        }
                                    </ul>
                                </li>
                                <li class="dropdown d-none d-md-block">
                                    <button class="btn btn-link dropdown-toggle ht-btn p-0" id="user" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @Name
                                    </button>   
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="settingButton">
                                        @if (Name != null)
                                        {
                                            <li><a class="dropdown-item" asp-controller="Customers" asp-action="Logout">Logout</a></li>
                                        }
                                    </ul>
                                </li>

                                <li class="d-block d-lg-none">
                                    <a href="" class="search-btn toolbar-btn">
                                        <i class="pe-7s-search"></i>
                                    </a>
                                </li>
                                @if (Name != null)
                                {
                                    <li class="minicart-wrap me-3 me-lg-0">
                                        <a href="#miniCart" class="minicart-btn toolbar-btn">
                                            <i class="pe-7s-shopbag"></i>
                                            <span class="quantity"></span>
                                        </a>
                                    </li>
                                }
                                <li class="mobile-menu_wrap d-block d-lg-none">
                                    <a href="#mobileMenu" class="mobile-menu_btn toolbar-btn pl-0">
                                        <i class="pe-7s-menu"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="main-header header-sticky" data-bg-color="#bac34e">
        <div class="container">
            <div class="main-header_nav position-relative">
                <div class="row align-items-center">
                    <div class="col-lg-12 d-none d-lg-block">
                        <div class="main-menu">
                            <nav class="main-nav">
                                <ul>
                                    <li class="drop-holder">
                                        <a asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="About">Giới Thiệu</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="Contact">Liên Hệ</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="offcanvas-minicart_wrapper" id="miniCart">
            <div class="harmic-offcanvas-body">
                <div class="minicart-content">
                    <div class="minicart-heading">
                        <h4 class="mb-0">Giỏ Hàng Của Tôi</h4>
                        <a href="#" class="button-close"><i class="pe-7s-close"></i></a>
                    </div>
                </div>
                <div class="group-btn_wrap d-grid gap-2">
                    <a class="btn btn-secondary btn-primary-hover" asp-controller="Cart" asp-action="ViewCart">View Cart</a>
                    <a href="checkout.html" class="btn btn-secondary btn-primary-hover">Thanh Toán</a>
                </div>
            </div>
        </div>
    <div class="global-overlay"></div>
</header>