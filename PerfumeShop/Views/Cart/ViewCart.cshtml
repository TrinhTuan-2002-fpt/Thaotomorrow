@model PerfumeShop.ModelView.CartModel
@{
    ViewData["Title"] = "Danh Sách Sản Phẩm Trong Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="container h-50 mt-10">
        <div class="row h-50">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h3 class="">Sản Phẩm Trong Giỏ Hàng</h3>
                    <ul>
                        <li>
                            <a asp-controller="Home" asp-action="Index">Home <i class="pe-7s-angle-right"></i></a>
                        </li>
                        <li>Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="javascript:void(0)">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product_remove">Remove</th>
                                        <th class="product-thumbnail">Images</th>
                                        <th class="product-name">Tên Sản Phẩm</th>
                                        <th class="product-price">Giá</th>
                                        <th class="quantity">Số Lượng</th>
                                        <th class="product-subtotal">Tổng Tiền</th>
                                    </tr>
                                </thead>
                                @foreach (var x in Model.Items)
                                {
                                    <tbody>
                                    <td>
                                        <a>
                                            <i class="pe-7s-close" title="Remove"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <img src="~/Images/ImgProduct/Chanel/@x.Image" class="img-thumbnail" width="200px" height="200px" />
                                    </td>
                                    <td>@x.Name</td>
                                    <td>@x.Price</td>
                                    <td class="quantity">
                                        <input  value="@x.Quantity" min="0" max="@x.Max" type="number">
                                    </td>
                                    <td>@x.Total</td>
                                    </tbody>
                                }
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Thanh Toán Hóa Đơn</h2>
                                    <ul>
                                        <li>Tổng Tiền: @Model.Total</li>
                                    </ul>
                                    <button type="submit">Thanh Toán</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>