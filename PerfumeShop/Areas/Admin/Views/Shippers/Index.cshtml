@model List<Shippers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
	<nav class="breadcrumb breadcrumb-dash">
		<a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i> Home</a>
		<span class="breadcrumb-item active">Danh sách Shipper</span>
	</nav>
	<div class="card">
		<div class="card-body">
			<div class="row m-b-30">
				<div class="col-lg-6 text-left">
					<a class="btn btn-primary" asp-controller="Shippers" asp-action="Create">
						<i class="anticon anticon-plus-circle m-r-5"></i>
						<span>Add Shippers</span>
					</a>
				</div>
				<div class="col-lg-6">
					<div class="row">
						<div class="col-lg-8">
							<input type="text" placeholder="Tìm kiếm" class="form-control"/>
						</div>
						<button class="btn btn-secondary"><i class="anticon anticon-search"></i> Search</button>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
<table class="table table-hover">
	<thead>
	<tr>
		<th>ID</th>
		<th>FullName</th>
		<th>Phone</th>
		<th>Status</th>
		<th>Cart</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@if (Model != null)
	{
		foreach (var x in Model)
		{
			<tr>
				<td>@x.ShipperId</td>
				<td>
					<div class="d-flex align-items-center">
						<img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
						<h6 class="m-b-0 m-l-10">@x.Name</h6>
					</div>
				</td>
				<td>@x.PhoneNumber</td>
				<td>@x.Status</td>
				<td>
					<a class="btn btn-primary btn-tone m-r-5"asp-area="Admin" asp-controller="Shippers" asp-action="Edit" asp-route-id="@x.ShipperId">Edit</a>
					<a class="btn btn-secondary btn-tone m-r-5" asp-controller="Shippers" asp-action="Details" asp-route-id="@x.ShipperId">Details</a>
					<a class="btn btn-danger btn-tone m-r-5" asp-controller="Shippers" asp-action="Delete" asp-route-id="@x.ShipperId">Delete</a>
				</td>
			</tr>
		}
	}
	</tbody>
</table>

