
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var sos = ViewData["Error"] as string;
}

<main class="main-content">
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="offset-3">
                <div class="col-lg-12">
                    <form asp-action="Login">
                        <div class="login-form">
                            <h2 class="login-title">Login Account</h2>
                            <div class="mt-2">
                                <div class="row">
                                    <label class="col-md-3">Email</label>
                                    <input class="col-md-4" type="text" name="Username" placeholder="Email Address">
                                </div>
                                <div class="row mt-3">
                                    <label class="col-md-3">Password</label>
                                    <input class="col-md-4" type="password" name="Password" placeholder="Password">
                                </div>

                                <div class="offset-3 col-md-12 pt-5">
                                    <button type="submit" value="Index" class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    @if (sos != null)
                    {
                        <h4 class="mt-3 text-center text-danger">@sos</h4>
                    }
                </div>
            </div>
        </div>
    </div>
</main>
