@model IEnumerable<PerfumeShop.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <nav class="breadcrumb breadcrumb-dash">
        <a class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i> Home</a>
        <span class="breadcrumb-item active">Danh sách sản phẩm</span>
    </nav>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-6 text-left">
                    <a class="btn btn-primary" asp-controller="Products" asp-action="Create">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Add sản phẩm</span>
                    </a>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-8">
                            <input type="text" placeholder="Tìm kiếm" class="form-control"/>
                        </div>
                        <button class="btn btn-secondary"><i class="anticon anticon-search"></i> Search</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Insence)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Madein)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebutYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FragrantId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var x in Model) {
        <tr>
				<td>
					<div class="d-flex align-items-center">
						<img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
						<h6 class="m-b-0 m-l-10">@x.Name</h6>
					</div>
				</td>
				<td>@x.Gender</td>
				<td>@x.Insence</td>
				<td>@x.Img</td>
				<td>@x.Price</td>
				<td>@x.Discount</td>
				<td>@x.Amount</td>
				<td>@x.Madein</td>
				<td>@x.DebutYear</td>
				<td>@x.Note</td>
				<td>@x.Status</td>
				<td>@x.TypeId</td>
				<td>@x.FragrantId</td>
            <td>
                <a  class="btn btn-primary btn-tone m-r-5"  asp-action="Edit" asp-route-id="@x.ProdcutId">Edit</a>
                <a  class="btn btn-secondary btn-tone m-r-5"   asp-action="Details" asp-route-id="@x.ProdcutId">Details</a>
                <a  class="btn btn-danger btn-tone m-r-5" asp-action="Delete" asp-route-id="@x.ProdcutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
